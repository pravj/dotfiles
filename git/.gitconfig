[credentials]
	helper = cache

[alias]
	# view latest 10 commit's history graph with commit message and hash
	l = log --pretty=oneline -n 10 --graph --abbrev-commit
	
	# List contributors(emails also) with number of commits : Yo @abhshkdz
	graf = shortlog -sne

	# Current working tree status
	#
	# short format
	s = status -s
	#
	# long format
	st = status

	# these are the real way to do ckeckouts
	co = checkout -
	cb = checkout -b

	# list branches with recent commit messages and hash
	#
	# local branches
	lb = branch -v
	#
	# all branches (remotes also)
	ab = branch -av

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local   = yellow
	remote  = green

[color "diff"]
	meta = yellow 
	frag = magenta 
	old  = red 
	new  = green 

[color "status"]
	added     = yellow
	changed   = green
	untracked = cyan
